      <websocket:handlers  allowed-origins="*">
        <websocket:mapping path="/springws/websocket" handler="wsHandler"/>
         <websocket:handshake-interceptors>
               <bean class="com.lend.chatroom.HandshakeInterceptor"/>
        </websocket:handshake-interceptors>
        <websocket:sockjs/>
    </websocket:handlers>
    <bean id="wsHandler" class="com.lend.chatroom.WSChatRoomHandler"/>
    

